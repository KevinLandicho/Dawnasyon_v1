<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"> <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp"
    android:background="@android:color/white"> <TextView
    android:id="@+id/txtItemName"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Rice"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/spinnerUnit"
    app:layout_constraintHorizontal_bias="0"
    android:gravity="start|center_vertical" />

    <Spinner
        android:id="@+id/spinnerUnit"
        android:layout_width="120dp"
    android:layout_height="35dp"
    android:spinnerMode="dropdown"
    app:layout_constraintEnd_toStartOf="@id/btnMinus"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/btnMinus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="-"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/background"
        app:layout_constraintEnd_toStartOf="@id/txtQty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/txtQty"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="0"
        android:textSize="16sp"
        android:inputType="number"
        android:background="@null"
        android:padding="0dp"
        app:layout_constraintEnd_toStartOf="@id/btnPlus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/btnPlus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="+"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>