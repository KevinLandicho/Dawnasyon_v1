<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/img_donor_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile_avatar"
                android:background="@drawable/bg_circle_gray"
                android:padding="2dp"
                android:layout_marginEnd="12dp"/>

            <!-- Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_donor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan M. Dela Cruz"
                    android:fontFamily="@font/dongle"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donated 50 packs of Rice"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Date -->
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09/1/2025"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- View Receipt Button (Hidden by default or always shown?) -->
        <!-- Based on your image, it looks like you want a button inside the card -->
        <Button
            android:id="@+id/btn_view_receipt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:text="View Digital Receipt"
            android:textSize="14sp"
            android:backgroundTint="#27869B"
            android:textColor="@color/white"
            app:cornerRadius="6dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>