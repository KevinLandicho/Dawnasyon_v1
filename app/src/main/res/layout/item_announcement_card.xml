<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/imgAnnouncementPhoto"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="#FFC107"
            android:contentDescription="Announcement image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtAnnouncementTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgAnnouncementPhoto"
            tools:text="ANNOUNCEMENT TITLE" />

        <TextView
            android:id="@+id/txtAnnouncementTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="@+id/txtAnnouncementTitle"
            app:layout_constraintStart_toStartOf="@+id/txtAnnouncementTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtAnnouncementTitle"
            tools:text="Thursday, 11:30AM" />

        <TextView
            android:id="@+id/txtAnnouncementDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/txtAnnouncementTitle"
            app:layout_constraintStart_toStartOf="@+id/txtAnnouncementTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtAnnouncementTime"
            tools:text="Lorem ipsum description text..." />

        <LinearLayout
            android:id="@+id/layout_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAnnouncementDescription"
            app:layout_constraintStart_toStartOf="@+id/txtAnnouncementTitle"
            app:layout_constraintEnd_toEndOf="@+id/txtAnnouncementTitle">

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start: 2026-02-08"
                android:textSize="13sp"
                android:textColor="#F57C00"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End: 2026-02-10"
                android:textSize="13sp"
                android:textColor="#D32F2F"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnApply"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#F5901A"
            android:fontFamily="@font/dongle"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="5dp"
            app:layout_constraintStart_toStartOf="@+id/txtAnnouncementTitle"
            app:layout_constraintTop_toBottomOf="@+id/layout_dates" />

        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_heart_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnApply"
            app:layout_constraintBottom_toBottomOf="@+id/btnApply"
            android:layout_marginEnd="16dp"
            android:contentDescription="Like button" />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/btnLike"
            app:layout_constraintTop_toTopOf="@id/btnLike"
            app:layout_constraintBottom_toBottomOf="@id/btnLike"/>

        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_bookmark_outline"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_like_count"
            app:layout_constraintTop_toTopOf="@+id/btnApply"
            app:layout_constraintBottom_toBottomOf="@+id/btnApply"
            android:contentDescription="Bookmark button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>