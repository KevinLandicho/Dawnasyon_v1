<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Icon inside box -->
        <androidx.cardview.widget.CardView
            android:id="@+id/iconBox"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:cardBackgroundColor="#F9EFE2"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_money" />
        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/dongle"
            android:text="@string/category"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/txtStatus"
            app:layout_constraintStart_toEndOf="@id/iconBox"
            app:layout_constraintTop_toTopOf="@id/iconBox" />

        <!-- Status on the right side, fixed size -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="52dp"
            android:layout_height="19dp"
            android:gravity="center"
            android:fontFamily="@font/dongle"
            android:background="@drawable/status_red"
            android:text="@string/critical"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:padding="0dp"
            app:layout_constraintStart_toEndOf="@id/txtTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtTitle" />

        <!-- Description -->
        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/dongle_light"
            android:text="Description here..."
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iconBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            android:layout_marginTop="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
