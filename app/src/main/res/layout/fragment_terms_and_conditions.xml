<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/icon_terms"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_document"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/dongle"
            android:text="Terms and Conditions"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_terms"
            app:layout_constraintTop_toTopOf="@id/icon_terms" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/dongle"
            android:text="Last Updated September 28, 2025"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/icon_terms"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            android:background="#F5901A"
            app:layout_constraintTop_toBottomOf="@id/tv_date" />

        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/dongle"
            android:text="1. Data Privacy"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/desc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="We respect your right to privacy. Any personal information you provide will be collected, stored, and processed only for the purpose of using this system."
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_1" />

        <TextView
            android:id="@+id/title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="2. Data Security"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_1" />

        <TextView
            android:id="@+id/desc_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="We use industry-standard security measures to protect your data against unauthorized access, alteration, or disclosure. While we strive to keep your information safe, no system is 100% secure, and we cannot guarantee absolute security."
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_2" />

        <TextView
            android:id="@+id/title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="3. User Responsibility"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_2" />

        <TextView
            android:id="@+id/desc_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="You are responsible for keeping your account credentials (username and password) confidential. Any activity under your account will be considered your responsibility."
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_3" />

        <TextView
            android:id="@+id/title_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="4. Data Usage"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_3" />

        <TextView
            android:id="@+id/desc_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="Your data will not be sold, rented, or shared with third parties without your consent, unless required by law. Information may only be used to improve system services and user experience."
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_4" />

        <TextView
            android:id="@+id/title_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="5. Consent"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_4" />

        <TextView
            android:id="@+id/desc_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="By using this system, you agree to these Terms and Conditions and consent to the collection and secure handling of your data."
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_5" />

        <TextView
            android:id="@+id/title_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="6. Updates to Terms"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_5" />

        <TextView
            android:id="@+id/desc_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="We may update these Terms and Conditions from time to time. Users will be notified of significant changes."
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_6" />

        <Button
            android:id="@+id/btn_close"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="Close"
            android:textColor="#F5901A"
            app:strokeColor="#F5901A"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/desc_6"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>