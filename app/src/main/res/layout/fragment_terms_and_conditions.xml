<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/icon_terms"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_document"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/dongle"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_terms"
            app:layout_constraintTop_toTopOf="@id/icon_terms" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/dongle"
            android:text="@string/last_updated_september_28_2025"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/icon_terms"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            android:background="#F5901A"
            app:layout_constraintTop_toBottomOf="@id/tv_date" />

        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/dongle"
            android:text="@string/_1_data_privacy"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/desc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="@string/we_respect_your_right_to_privacy_any_personal_information_you_provide_will_be_collected_stored_and_processed_only_for_the_purpose_of_using_this_system"
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_1" />

        <TextView
            android:id="@+id/title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="@string/_2_data_security"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_1" />

        <TextView
            android:id="@+id/desc_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="@string/we_use_industry_standard_security_measures_to_protect_your_data_against_unauthorized_access_alteration_or_disclosure_while_we_strive_to_keep_your_information_safe_no_system_is_100_secure_and_we_cannot_guarantee_absolute_security"
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_2" />

        <TextView
            android:id="@+id/title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="@string/_3_user_responsibility"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_2" />

        <TextView
            android:id="@+id/desc_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="@string/you_are_responsible_for_keeping_your_account_credentials_username_and_password_confidential_any_activity_under_your_account_will_be_considered_your_responsibility"
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_3" />

        <TextView
            android:id="@+id/title_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="@string/_4_data_usage"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_3" />

        <TextView
            android:id="@+id/desc_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="@string/your_data_will_not_be_sold_rented_or_shared_with_third_parties_without_your_consent_unless_required_by_law_information_may_only_be_used_to_improve_system_services_and_user_experience"
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_4" />

        <TextView
            android:id="@+id/title_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="@string/_5_consent"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_4" />

        <TextView
            android:id="@+id/desc_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="@string/by_using_this_system_you_agree_to_these_terms_and_conditions_and_consent_to_the_collection_and_secure_handling_of_your_data"
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_5" />

        <TextView
            android:id="@+id/title_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dongle"
            android:text="@string/_6_updates_to_terms"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_5" />

        <TextView
            android:id="@+id/desc_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle"
            android:text="@string/we_may_update_these_terms_and_conditions_from_time_to_time_users_will_be_notified_of_significant_changes"
            android:textColor="#444444"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/title_6" />

        <Button
            android:id="@+id/btn_close"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="@string/close"
            android:textColor="#F5901A"
            app:strokeColor="#F5901A"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/desc_6"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>