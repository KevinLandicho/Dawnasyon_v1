<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Profile_fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/user_info_card"
            android:layout_width="363dp"
            android:layout_height="171dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_profile_avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/badge_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="#E8F5E9"
                    android:paddingStart="6dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="6dp"
                    android:paddingBottom="2dp"
                    tools:text="âœ… VERIFIED ACTIVE"
                    android:visibility="gone"
                    android:textColor="#2E7D32"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/user_name"
                    app:layout_constraintTop_toBottomOf="@id/user_name" />

                <Button
                    android:id="@+id/btn_edit_profile"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#F5901A"
                    android:fontFamily="@font/dongle"
                    android:text="@string/edit_profile"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:cornerRadius="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/user_name"
                    app:layout_constraintTop_toBottomOf="@id/badge_status"
                    app:strokeColor="#F5901A" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Loading..."
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/profile_pic"
                    app:layout_constraintTop_toTopOf="@id/profile_pic" />

                <Button
                    android:id="@+id/btn_view_qr"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/dongle"
                    android:text="QR code"
                    android:textColor="#F5901A"
                    android:textSize="20sp"
                    app:cornerRadius="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/user_name"
                    app:strokeColor="#F5901A" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/details_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/user_info_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/ProfileDetailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/detail_name"
                    style="@style/ProfileDetailValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Juan M. Dela Cruz" />

                <TextView
                    style="@style/ProfileDetailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/detail_address"
                    style="@style/ProfileDetailValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="123 Carmel V Compound Tandang Sora Quezon City" />

                <TextView
                    style="@style/ProfileDetailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_number"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/detail_contact"
                    style="@style/ProfileDetailValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="09123456789" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pin_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Pin My Location on Map"
                    android:textSize="12sp"
                    android:backgroundTint="#27869B"
                    android:layout_marginTop="12dp"
                    app:cornerRadius="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/details_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_warning"
                        app:tint="#D32F2F"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_priority_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALCULATING..."
                            android:textStyle="bold"
                            android:textColor="#D32F2F"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_priority_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Score: 0"
                            android:textSize="11sp"
                            android:textColor="#E65100"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_expand_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#E65100"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_breakdown_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingStart="60dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score Breakdown:"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#BF360C"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_priority_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading details..."
                        android:textSize="12sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#E65100"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_family_tree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_priority">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Household Family Tree"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registered members in this household:"
                    android:textSize="11sp"
                    android:textColor="#666"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/ll_family_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/menu_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_family_tree">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <include layout="@layout/item_profile_menu" android:id="@+id/menu_tracker" />
                <include layout="@layout/item_profile_menu" android:id="@+id/menu_history" />
                <include layout="@layout/item_profile_menu" android:id="@+id/menu_suggestion" />
                <include layout="@layout/item_profile_menu" android:id="@+id/menu_password" />

                <include layout="@layout/item_profile_menu" android:id="@+id/menu_terms" />

                <include layout="@layout/item_profile_menu" android:id="@+id/menu_delete" />
                <include layout="@layout/item_profile_menu" android:id="@+id/menu_logout" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>