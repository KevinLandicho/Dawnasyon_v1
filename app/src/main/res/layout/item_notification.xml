<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_notif_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_home_placeholder"
                android:background="@drawable/bg_circle_gray"
                android:padding="8dp"
                android:layout_marginEnd="12dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_notif_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/application_decline"
                    android:fontFamily="@font/dongle"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_notif_desc_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_notif_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:28 PM"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone"> <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_notif_desc_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thank_you_for_your_application_unfortunately_we_were_unable_to_approve_your_application_due_to_issues_with_your_submitted_id"
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"/>

            <ImageView
                android:id="@+id/img_notif_attachment"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_home_placeholder"
                android:scaleType="centerCrop"
                android:background="#FFF3E0"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>